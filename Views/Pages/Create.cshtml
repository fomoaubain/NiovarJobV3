                @Html.LabelFor(model => model.website, "Site web (facultatif)", htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.website, new { htmlAttributes = new { @class = "form-control" } })
