@model WebApplication1.Models.Job


<!-- Our Dashbord -->
    <section>
        <div class="our-dashbord dashbord ">
            <div class="container">
                <div class="row">
                    @{
                        Html.RenderPartial("Partial_menu_client");
                    }
                    <div class="col-sm-12 col-lg-8 col-xl-9">
                        <section class="bgc-fa pt10 mt10 mbt10">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-8 col-xl-9">
                                        <div class="candidate_personal_info style2">
                                            <div class="thumb text-center">
                                                @if (Session["profil"] == null || Session["profil"].Equals(""))
                                                {
                                                    <img class="img-fluid rounded" src="~/Assets/images/team/c1.jpg" width="195" height="150" alt="1.jpg"><br><br>
                                                }
                                                else
                                                {
                                                    <img class="img-fluid rounded" src="~/Fichier/@Session["profil"]" width="195" height="150" alt="cl1.jpg"><br><br>

                                                }
                                            </div>
                                            <div class="details">
                                                <small class="text-thm2">@Model.heureTravail</small>
                                                <h3>@Model.titre</h3>
                                                <p>Publié le @Model.created par <a href="#" class="text-thm2">@Session["login"]</a></p>
                                                <ul class="address_list">
                                                    <li class="list-inline-item"><a href="#"><span class="flaticon-location-pin"></span> Bothell, @Model.ville</a></li>
                                                    <li class="list-inline-item"><a href="#"><span class="flaticon-price"></span> @(Model.remuneration/2) $ par semaine</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>

                        <!-- Candidate Personal Info Details-->
                        <section class="bgc-white pb30">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-8 col-xl-8">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="candidate_about_info style2">
                                                    <h4 class="fz20 mb30">Description de l'offre</h4>
                                                    <p class="mb30"> @Html.Raw(Model.description)</p>

                                                    <h4 class="fz20 mb30">Taches et responsabilité:</h4>

                                                    <p>  @Html.Raw(Model.responsabilite)</p>


                                                    <h4 class="fz20 mb30">Compétences requises</h4>
                                                    <p> @Html.Raw(Model.exigence) </p>

                                                    <h4 class="fz20 mb30">Diplômes nécessaire</h4>

                                                    @foreach (WebApplication1.Models.DiplomeJob data in ViewBag.listDiplomeJob)
                                                    {
                                                        <p><span class="flaticon-right-arrow text-thm2"></span> @data.Diplome.libelle </p>
                                                    }

                                                    <h4 class="fz20 mb30">Avantages sociaux</h4>
                                                    @foreach (WebApplication1.Models.AvantageSociauxJob data in ViewBag.listAvantageSociauxJob)
                                                    {
                                                        <p><span class="flaticon-right-arrow text-thm2"></span> @data.AvantageSociaux.libelle </p>
                                                    }

                                                    <h4 class="fz20 mb30">Lieu exacte de l'emploi</h4>
                                                    <p class="fwb">
                                                        Pays :<span class="color-green">@Model.pays </span>
                                                        Province : <span class="color-green">@Model.province </span>
                                                        Ville :  <span class="color-green">@Model.ville </span>
                                                    </p>
                                                    @if (Model.masquerEmplacement == 1)
                                                    {
                                                       
                                                        <p class="fwb">
                                                            Code postal :
                                                            <span class="color-green">
                                                                @Model.codePostal
                                                            </span>
                                                        </p>

                                                        <p class="fwb">
                                                            Adresse postal :
                                                            <span class="color-green">
                                                                @Model.adressePostal
                                                            </span>
                                                        </p>
                                                    }


                                                </div>
                                                <div class="row personer_information_company">
                                                    <div class="col-sm-6 col-lg-6">
                                                        <div class="icon text-thm"><span class="flaticon-line-chart text-thm2"></span></div>
                                                        <div class="details">
                                                            <p>Jour de Travail</p>
                                                            <p>@Model.jourTravail</p>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4 col-lg-4">
                                                        <div class="icon text-thm"><span class="flaticon-24-hours-support text-thm2"></span></div>
                                                        <div class="details">
                                                            <p>Quart de travail</p>
                                                            <p>@Model.QuartTravail1.libelle</p>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4 col-lg-4">
                                                        <div class="icon text-thm"><span class="flaticon-controls text-thm2"></span></div>
                                                        <div class="details">
                                                            <p>Statut de la formation</p>
                                                            <p> @Model.StatutEmploi.libelle</p>
                                                        </div>
                                                    </div>
                                                    @if (Model.immediat.Equals("false"))
                                                    {
                                                        <div class="col-sm-6 col-lg-6">
                                                            <div class="icon text-thm"><span class="flaticon-24-hours-support text-thm2"></span></div>
                                                            <div class="details">
                                                                <p>Date entrée en poste</p>
                                                                @if (Model.dateEntre != null)
                                                                {
                                                                    <p> @Model.dateEntre</p>
                                                                }
                                                                else
                                                                {<p>Dès que possible</p>}

                                                            </div>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="col-sm-4 col-lg-4">
                                                            <div class="icon text-thm"><span class="flaticon-24-hours-support text-thm2"></span></div>
                                                            <div class="details">
                                                                <p>Date début</p>
                                                                <p> @Model.dateDebut</p>
                                                            </div>
                                                        </div>
                                                        <div class="col-sm-4 col-lg-4">
                                                            <div class="icon text-thm"><span class="flaticon-24-hours-support text-thm2"></span></div>
                                                            <div class="details">
                                                                <p>Date fin</p>
                                                                <p> @Model.dateFin</p>
                                                            </div>
                                                        </div>
                                                    }

                                                    <div class="col-sm-12 col-lg-12">
                                                        <p class="fwb">Connaissances de la langue :<span class="color-green"> @Model.Langue.libelle </span></p>
                                                    </div>
                                                    <div class="col-sm-4 col-lg-4">
                                                        <div class="icon text-thm"><span class="flaticon-businessman-paper-of-the-application-for-a-job text-thm2"></span></div>
                                                        <div class="details">
                                                            <p>Niveau oral</p>
                                                            @foreach (WebApplication1.Models.NiveauLangue data in ViewBag.listNiveauLangue)
                                                            {
                                                                if (data.id == Model.niveauOrale)
                                                                {
                                                                    <p>@data.libelle</p>
                                                                }

                                                            }

                                                        </div>
                                                    </div>
                                                    <div class="col-sm-4 col-lg-4">
                                                        <div class="icon text-thm"><span class="flaticon-businessman-paper-of-the-application-for-a-job text-thm2"></span></div>
                                                        <div class="details">
                                                            <p>Niveau écrire</p>
                                                            @foreach (WebApplication1.Models.NiveauLangue data in ViewBag.listNiveauLangue)
                                                            {
                                                                if (data.id == Model.niveauEcrire)
                                                                {
                                                                    <p>@data.libelle</p>
                                                                }
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-12 col-lg-12">
                                                        @if (Model.equipeEmploi != null && Model.equipeEmploi.Equals("1"))
                                                        {

                                                            <p class="fwb">
                                                                Equité en emploi :
                                                                <span class="">
                                                                    "Cet employeur souscrit au principe d'équité en applique un programme d'accès à l'égalité
                                                                    en emploi pour les femmes, les autochtones, les minorités visibles,
                                                                    les minorités ethniques et les personnes handicapées"
                                                                </span>
                                                            </p>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-xl-4">
                                        <h4 class="fz20 mb30">Information sur l'offre</h4>
                                        <div class="candidate_working_widget style2 bgc-fa">
                                            <div class="icon text-thm"><span class="flaticon-money"></span></div>
                                            <div class="details">
                                                <p class="color-black22">Salaire offert</p>
                                                @if (Model.immediat.Equals("true"))
                                                {<p> @Model.remunerationN $ par quinzaine</p>}
                                            else
                                            { <p> @Model.remuneration $ par quinzaine</p>}

                                            </div>
                                            <div class="icon text-thm"><span class="flaticon-24-hours-support text-thm2"></div>
                                            <div class="details">
                                                <p class="color-black22">Date entrée en poste</p>
                                                @if (Model.dateEntre != null)
                                                {
                                                    <p> @Model.dateEntre</p>
                                                }
                                                else
                                                {<p>Dès que possible</p>}

                                            </div>
                                            <div class="icon text-thm"><span class="flaticon-24-hours-support text-thm2"></div>
                                            <div class="details">
                                                <p class="color-black22">Date fin de l'offre</p>
                                                <p>@Model.dateFinOffre</p>
                                            </div>
                                            <div class="icon text-thm"><span class="flaticon-controls"></span></div>
                                            <div class="details">
                                                <p class="color-black22">Categorie de l'offre</p>

                                                @if (Model.Cat_id != null)
                                                {
                                                    <p>@Model.Categorie.Types.libelle</p>
                                                }
                                                else
                                                { <p>Aucune</p>}

                                            </div>
                                            <div class="icon text-thm"><span class="flaticon-gender"></span></div>
                                            <div class="details">
                                                <p class="color-black22">Type d'offre</p>
                                                <p>@Model.TypeOffre.libelle</p>
                                            </div>
                                            <div class="icon text-thm"><span class="flaticon-mortarboard"></span></div>
                                            <div class="details">
                                                <p class="color-black22">Experience</p>
                                                <p>@Model.margeExperience</p>
                                            </div>
                                            <div class="icon text-thm"><span class="flaticon-mortarboard"></span></div>
                                            <div class="details">
                                                <p class="color-black22">Niveau d'étude</p>
                                                <p>@Model.NiveauScolarite.libelle</p>
                                            </div>
                                            <div class="icon text-thm"><span class="flaticon-paper"></span></div>
                                            <div class="details">
                                                <p class="color-black22">Type de contrat</p>
                                                <p>@Model.Contrat.libelle</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>

                    </div>
                </div>
            </div>
          </div>
    </section>


