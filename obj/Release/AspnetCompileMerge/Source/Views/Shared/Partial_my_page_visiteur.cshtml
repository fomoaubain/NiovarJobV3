        <li class="mt-4 mr-4  title"><a href="@Url.Action("AproposHome","Home", new { id=ViewBag.idInsc })" class=" mt20 h5 btn-sm btn-@(ViewBag.Title=="AproposHome" ? "warning" : "primary" ) font-weight-bolder">A propos</a></li>
        <li class="mt-4 mr-4 title"><a href="@Url.Action("MaGalerieHome","Home", new { id=ViewBag.idInsc })" class=" mt20  h5  btn-sm btn-@(ViewBag.Title=="MaGalerieHome" ? "warning" : "primary" )  font-weight-bolder">Galerie</a></li>
        <li class="mt-4 mr-4 title"><a href="@Url.Action("MesAvisHome","Home", new { id=ViewBag.idInsc })" class="mt20 h5 btn-sm btn-@(ViewBag.Title=="MesAvisHome" ? "warning" : "primary" ) font-weight-bolder">Avis</a></li>
        <li class="mt-4 mr-4 title"><a href="@Url.Action("MyPageOffre","Home", new { id=ViewBag.idInsc })" class="mt20 h5 btn-sm btn-@(ViewBag.Title=="MyPageOffre" ? "warning" : "primary" ) font-weight-bolder">Offres d'emploi </a></li>
