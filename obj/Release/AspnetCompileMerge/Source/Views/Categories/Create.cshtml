@model WebApplication1.Models.Categorie

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    WebApplication1.Models.Types CurrentType = (WebApplication1.Models.Types)ViewBag.CurrentType;
}
<div class="page-header">
    <div class="row">
        <div class="col-sm-12">
            <h3 class="page-title">Créer titre emploi pour la catégorie [ @CurrentType.libelle ] </h3>
        </div>
    </div>
</div>

@using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="hidden" value="@CurrentType.id" name="Typ_id" />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.libelle, htmlAttributes: new { @class = "control-label col-md-12" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.libelle, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.libelle, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-lg-12 mb-4">
        <div class="row">
            <button type="button" class="btn-sm btn-primary mr-2" data-toggle="modal" data-target="#modalBibliotheque">
                Sélectionner une image dans la gallerie
            </button>
            <input type="text" name="image"  class="form-control col-md-8" id="imageValue" placeholder="aucune image selectionner" readonly />

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ajouter" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Retour à la liste", "Index")
</div>
