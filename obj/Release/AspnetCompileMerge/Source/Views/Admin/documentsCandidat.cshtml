
@{
    ViewBag.Title = "documentsCandidat";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    List<WebApplication1.Models.File> listFile = ViewBag.listFile;
}
    <div class="container">

        <div class="mail-attachments">
            <p class=" text-center h2" ><i class="fa fa-paperclip"></i> Listes des documents attachés  </p>
            <ul class="attachments clearfix">
                @if (ViewBag.listFile!=null)
                {
                    foreach (WebApplication1.Models.File data in ViewBag.listFile)
                    {
                        <li>
                            <div class="attach-file"><i class="fa fa-file-pdf-o"></i></div>
                            <div class="attach-info"> <a href="@Href("~/Fichier/"+data.chemin)" class="attach-filename">@data.libelle [@data.type]</a> <div class="attach-fileize">Ajouté le @data.created</div></div>
                        </li>
                    }
                }
                else
                {
                    <div class="col-lg-12">
                        <h6 class=" color-gray">Aucun document enregistré</h6>
                    </div>
                }

            </ul>
        </div>

    </div>

