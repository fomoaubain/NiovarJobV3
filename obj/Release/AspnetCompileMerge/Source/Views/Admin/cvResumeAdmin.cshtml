@model WebApplication1.Models.CvListObject
@{
    ViewBag.Title = "cvResumeAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="page-wrapper job-wrapper">

        <!-- Page Content -->
        <div class="content container">

            <!-- Page Header -->
            <div class="page-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="page-title text-center"> CV de [ @Model.inscrire.nom ] </h3>
                       
                    </div>
               
                </div>
            </div>
            <!-- /Page Header -->

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6 m-b-20">
                                    <img height="90" width="100" src="~/Fichier/@Model.inscrire.profil" class="inv-logo" alt="">
                                    <ul class="list-unstyled">
                                        <li>Profession : <span> @Model.inscrire.titreEmploi</span></li>
                                        <li>Experience : <span>@Model.inscrire.anneeExperience</span></li>
                                        <li>Salaire negocier : <span> @Model.inscrire.salaireNegocier</span></li>
                                        <li>Salaire souhaiter : <span> @Model.inscrire.salaireSouhaiter</span></li>

                                    </ul>
                                </div>
                                <div class="col-sm-6 m-b-20">
                                    <div class="invoice-details">
                                        <h3 class="text-uppercase">@Model.inscrire.nom</h3>
                                        <ul class="list-unstyled">
                                            <li>Email : <span> @Model.inscrire.email</span></li>
                                            <li>Tél : <span>@Model.inscrire.phone</span></li>
                                            <li>Ville : <span> @Model.inscrire.ville</span></li>
                                            <li>Pays : <span> @Model.inscrire.pays</span></li>
                                            <li>Adresse : <span> @Model.inscrire.adresse</span></li>
                                            <li>Website : <span> @Model.inscrire.website</span></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 col-lg-12 m-b-5 text-center">
                                    <h5 class="">Lettre / brève présentation </h5>
                                    <p class="h5">
                                        @Model.information.lettre
                                    </p>
                                </div>
                                <div class="col-sm-12 col-lg-12 m-b-5 text-center">
                                    <h5 class="">Mes compétences </h5>
                                    <p class="h5">
                                        @Model.information.competence
                                    </p>
                                </div>
                            </div>

                            <div class="col-sm-12 col-lg-12 m-b-5 text-center">
                                <h5 class="">Parcours académiques </h5>
                            </div>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Période</th>
                                        <th>Etablissement</th>
                                        <th class="d-none d-sm-table-cell">Diplome</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.listEducation==null)
                                    {
                                    <tr>
                                        <td colspan="4">Aucun resultat disponible</td>
                                    </tr>  
                                    }
                                    else {
                                    foreach (WebApplication1.Models.Education data in ViewBag.listEducation)
                                    {
                                        <tr>
                                            <td>@data.periode</td>
                                            <td>@data.etablissement</td>
                                            <td class="d-none d-sm-table-cell">@data.diplome</td>
                                            <td>@data.description</td>

                                        </tr>
                                    }
                                    }
                                </tbody>
                            </table>

                            <div class="col-sm-12 col-lg-12 m-b-5 text-center">
                                <h5 class="">Expériences proffessionnelles </h5>
                            </div>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Période</th>
                                        <th>Etablissement</th>
                                        <th class="d-none d-sm-table-cell">Fonction</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.listExperience == null)
                                    {
                                        <tr>
                                            <td colspan="4">Aucun resultat disponible</td>
                                        </tr>

                                    }
                                    else
                                    {
                                        foreach (WebApplication1.Models.Experience data in ViewBag.listExperience)
                                        {
                                            <tr>
                                                <td>@data.periode</td>
                                                <td>@data.etablissement</td>
                                                <td class="d-none d-sm-table-cell">@data.fonction</td>
                                                <td>@data.description</td>

                                            </tr>
                                        }
                                    }
                                    </tbody>
                            </table>


                            <div class="col-sm-12 col-lg-12 m-b-5 text-center">
                                <h5 class="">Autres experiences </h5>
                            </div>
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Période</th>
                                        <th>Etablissement</th>
                                        <th class="d-none d-sm-table-cell">Fonction</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.listAutre == null)
                                    {
                                        <tr>
                                            <td colspan="4">Aucun resultat disponible</td>
                                        </tr>

                                    }
                                    else
                                    {
                                        foreach (WebApplication1.Models.Autre data in ViewBag.listAutre)
                                        {
                                            <tr>
                                                <td>@data.periode</td>
                                                <td>@data.etablissement</td>
                                                <td class="d-none d-sm-table-cell">@data.fonction</td>
                                                <td>@data.description</td>

                                            </tr>
                                        }
                                    }
                                    </tbody>
                            </table>




                            <div>

                                <div class="invoice-info">
                                    <h5>Autres  information</h5>
                                    <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus sed dictum ligula, cursus blandit risus. Maecenas eget metus non tellus dignissim aliquam ut a ex. Maecenas sed vehicula dui, ac suscipit lacus. Sed finibus leo vitae lorem interdum, eu scelerisque tellus fermentum. Curabitur sit amet lacinia lorem. Nullam finibus pellentesque libero, eu finibus sapien interdum vel</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Page Content -->

    </div>

