@model WebApplication1.Models.Inscrire
@{
    ViewBag.Title = "verifyEmailExist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!-- Our Dashbord -->
<section>
    <div class="our-dashbord dashbord ">
        <div class="container">
            <div class="row justify-content-center mb-4">

                <div class="col-lg-8 col-xl-8 col-md-8 text-center ">
                    <div class="password_change_form text-center">
                        <h4>Vérification de votre addre email dans notre plateforme</h4>

                        @if (ViewBag.Message != null)
                        {
                            <div class="ui_kit_message_box" id="message2">
                                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                    @ViewBag.Message
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            </div>
                        }

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.email, "Veuillez saisir votre adresse email", htmlAttributes: new { @class = "control-label col-md-8" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <button type="submit" class="btn btn-thm">Verifier</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>





