
@model WebApplication1.Models.MailsModel

@{
    ViewBag.Title = "postulerDirectement";
    Layout = "~/Views/Shared/_Layout.cshtml";
    String emails = (String)ViewBag.emails;

    WebApplication1.Models.Inscrire inscrire = ViewBag.inscrire;
}


<!-- Summernote CSS -->
<link rel="stylesheet" href="~/Assets/css/summernote-bs4.css">
<style>
    .bootstrap-tagsinput span[data-role="remove"]:after {
        content: "x";
        padding: 0px 2px;
        color: #fff;
        cursor: pointer;
    }
</style>
<!-- Page Header -->
<!-- /Page Header -->
<section>
    <div class="container">
        @using (Html.BeginForm("postulerDirectement", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="row justify-content-center">

                <div class="col-sm-6 mt50">
                    <h3 class="text-center">Envoyer votre candidature</h3>
                   

                    <div class="card">
                  
                        <input type="hidden" name="idJob"  value="@ViewBag.idJob" >

                        <div class="card-body" id="mailForm">

                            <div class="form-group">
                                <label class="form-check-label" for="exampleCheck1">Courriel de l'employeur</label>
                                <input type="text" name="To" placeholder="To" class="form-control" id="to" value="@inscrire.email" readonly>
                            </div>

                            <div class="form-group">
                                <label class="form-check-label" for="exampleCheck1">Sujet</label>
                                <input type="text" name="subject" placeholder="Sujet" id="subject" class="form-control" required>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <label class="form-check-label" for="exampleCheck1">Choisir votre CV au format (.pdf, .docx, .jpg, .png)</label>
                                    <div class="form-group">
                                        <input accept="image/*, .doc, .docx, .ppt, .pptx, .pdf, .xlsx" type="file" placeholder="Attachment" id="attachment" name="fichier" multiple="multiple" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-check-label" for="exampleCheck1">Laissez un  message</label>
                                <textarea id="message" name="message" rows="4" class="form-control summernote" placeholder="Votre message" required></textarea>
                            </div>
                            <div class="col-md-12">
                                <p class="h4" for="exampleCheck1">
                                    <span class="font-weight-bold" for="exampleCheck1">Note information : </span>
                                   "Cette compagnie n’existe pas sur notre plateforme. Cette offre est publié en dehors de niovarJobs "
                                </p>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Soumettre ma canidature" class="btn-lg btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
               
            </div>
        }
        </div>
</section>
<!-- Summernote JS -->
<script src="~/Assets/js/summernote-bs4.min.js"></script>
<script type="text/javascript" src="~/Assets/js/tagsinput.js"></script>
<script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>





