@model WebApplication1.Models.Abonnement

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Supprimer</h2>

<h3>Voulez vous vraiment supprimer ?</h3>
<div>
    <h4>Details</h4>
    <hr />
    <dl class="dl-horizontal row">
        <div class="col-sm-6 col-md-4">
            <dt>
                @Html.DisplayNameFor(model => model.type)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.type)
            </dd>
        </div>

        <div class="col-sm-6 col-md-4">

            <dt>
                @Html.DisplayNameFor(model => model.titre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.titre)
            </dd>
        </div>

        <div class="col-sm-6 col-md-4">

            <dt>
                @Html.DisplayNameFor(model => model.description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.description)
            </dd>
        </div>

        <div class="col-sm-6 col-md-4">

            <dt>
                @Html.DisplayNameFor(model => model.montant)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.montant)
            </dd>
        </div>

        <div class="col-sm-6 col-md-4">
            <dt>
                @Html.DisplayNameFor(model => model.status)
            </dt>

            <dd>
                @(Model.status == 1 ? "Activé" : "Non Activé")
            </dd>
        </div>

        <div class="col-sm-6 col-md-4">

            <dt>
                @Html.DisplayNameFor(model => model.created)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.created)
            </dd>
        </div>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn-sm btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
