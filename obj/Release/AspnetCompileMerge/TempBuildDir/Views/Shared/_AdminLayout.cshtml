                                            </a>
                                        </div>
                                        <input type="hidden" id="nameImage0" value="" />
                                        <div class="col-md-12">
                                            <button class="text-center btn-sm btn-danger" onclick="selectImage(0)"> Aucun choix </button>
                                        </div>
                                    </div>
                                </div>

                                @if (listBibliotheque.Count > 0)
                                {
                                    foreach (WebApplication1.Models.Bibliotheque item in ViewBag.listBibliotheque)
                                    {
                                        <div class="col-lg-3 col-md-4 col-6 mb-2">
                                            <div class="row">
                                                <div class="col-md-12">
