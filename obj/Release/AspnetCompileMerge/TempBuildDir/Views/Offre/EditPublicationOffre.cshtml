<style type="text/css">
    .select2-dropdown {
        top: 22px !important;
        left: 8px !important;
    }
</style>



<script>

    

    $(".country").select2({
        placeholder: "Choisir le pays",
        allowClear: true
    });

    $(".state").select2({
        placeholder: "Choisir la province",
        allowClear: true
    });

    $(".city").select2({
        placeholder: "Choisir la ville",
        allowClear: true
    });

    var valuePays = '@ViewBag.pays';
    var valueProvince = '@ViewBag.province';
    var valueVille = '@ViewBag.ville';

    console.log("valuePays :" + valuePays);
    console.log("valueProvince :" + valueProvince);
    console.log("valueVille :" + valueVille);

    if (valuePays == '') {
        valuePays = null;
    }

    if (valueProvince == '') {
