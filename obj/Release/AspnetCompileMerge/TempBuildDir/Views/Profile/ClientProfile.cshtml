     $("#categorie").on('change', function (e) {
        var optionSelected = $("option:selected", this);
        var id = this.value;
        var stateOptions = " <option selected  value=''> choisir  titre emploi </option>";
        $.ajax({
            type: 'GET',
            url: '@Url.Action("GetAllTitreEmploi", "Offre")',
            data: { "id": id },
            dataType: 'json',
            success: function (data) {
                console.log("tablaeu:" + data);
                $.each(data, function (i, titreEmploi) {
                    stateOptions += "<option value='"
                        + titreEmploi.id +
                        "'>"
                        + titreEmploi.libelle +
                        "</option>";
                });
                $('#titreEmploi').html(stateOptions);
            },
            error: function (emp) {
                stateOptions += "<option value=''>" +
                    "Aucune donné trouvé</option>";
                $('#titreEmploi').html(stateOptions);
            }
        });
    });


</script>



<script type="text/javascript">
    $(document).ready(function () {
        $("#imgInput").change(function () {
            readURL(this);
        });

      
    });

    function closeSplash() {
        $('#splashMsg').removeClass('bounceInRight').addClass("bounceOutRight");
    }
    /*
     * source : l'id ou la classe qui écoute l'evenement
     * imgPreviw : le src qui recoit l'affichage
     * desc : le texte descriptif de l'image
     *
     */
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#previewImg').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

