

<style>
    .user_profile {
        background-color: #ffffff;
        border-radius: 4px;
        height: 130px;
        padding: 30px;
        -webkit-box-shadow: 1px 2px 5px 0 rgba(0, 0, 0, 0.1);
        -moz-box-shadow: 1px 2px 5px 0 rgba(0, 0, 0, 0.1);
        box-shadow: 1px 2px 5px 0 rgba(0, 0, 0, 0.1);
        width: 281px;
        margin-left: 19px;
        margin-bottom: 5px;
    }
    .dashbord_nav_list {
        background-color: #ffffff;
        border-radius: 4px;
        padding: 20px;
        width: 280px;
        box-shadow: 1px 2px 5px 0 rgba(0, 0, 0, 0.1);
    }
</style>

            <div class="col-sm-12 col-lg-4 col-xl-3 dn-smd">
                <div class="user_profile">
                    <div class="media">
                        @if (Session["profil"] == null || Session["profil"].Equals(""))
                        {
                            <img height="100" src="~/Assets/images/team/avatar.png" class="align-self-start mr-3 rounded-circle" alt="e1.png">
                        }
                        else
                        {
                            <img src="~/Fichier/@Session["profil"]"  class="align-self-start mr-3 rounded-circle" alt="e1.png" style="height:80px; width:80px;">
                        }

                    <div class="media-body">
                        @if (Session["nom_representant"] == null || Session["nom_representant"].Equals(""))
                        {
                        <h6 class="mt-0">Bienvennue</h6>
                        }
                        else
                        {
                    <h5 class="mt-0">@(Session["nom_representant"].ToString().Length <= 15 ? @Session["nom_representant"] : @Session["nom_representant"].ToString().Substring(0, 15) +"...")</h5>
                        }

                        @if (Session["adresse"] == null || Session["adresse"].Equals(""))
                        {
                             <h6 class="mt-0">[ Adresse de la compagnie ]</h6>
                        }
                        else
                        {
                    <p>@(Session["adresse"].ToString().Length <= 30 ? @Session["adresse"] : @Session["adresse"].ToString().Substring(0, 30) +"...")</p>
                        }

                    </div>
                    </div>
                </div>
