        function setSelected(req, val) {
            return req == val ? "selected" : "";
        }

        $(function () {
            var countryOptions = " <option selected  value=''>Veuiller choisir le pays</option>";
            var stateOptions = " <option selected  value=''>Veuiller choisir la ville</option>";
