// permet de caché et d'afficher certains div en fonction du type cj=hoisi afin de flitrer
        function checkType() {
            var type = $('#type').val();
            
            if (type == 'client') {
                $('#divExperience').hide();
            } else if (type == 'candidat') {
                $('#divExperience').show();
            } else if (type == '' || type == undefined) {
                $('#divExperience').hide();
            } 
        }

        $(document).ready(function () {
          
            checkType();
        });



