                        //<option value='countrycode'>contryname</option>
                        stateOptions += "<option value='"
                            + ville.name +
                            "'" + setSelected('@Html.Raw(Request["ville"])', ville.name) +">"
                            + ville.name +
                            "</option>";
                    }
                });
                $('#ville').html(stateOptions);
            });
        }

